# Database
DATABASE_URL=sqlite+aiosqlite:///./neuroresolv.db
# For PostgreSQL: DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/neuroresolv

# Security
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Google Gemini API (for AI agents and web search)
GOOGLE_API_KEY=your-gemini-api-key

# OpenAI API (for Whisper voice transcription)
OPENAI_API_KEY=your-openai-api-key

# Opik by Comet (for LLM tracing and evaluation)
OPIK_API_KEY=your-opik-api-key
OPIK_WORKSPACE=default
OPIK_PROJECT_NAME=neuroresolv

# Application Settings
ENVIRONMENT=development
DEBUG=true

# CORS Origins (for frontend)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
